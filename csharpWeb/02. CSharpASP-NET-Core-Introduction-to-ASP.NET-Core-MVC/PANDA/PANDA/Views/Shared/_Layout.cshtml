@using Microsoft.AspNetCore.Mvc;
@using Microsoft.AspNetCore.Http;
@using Panda.Helpers;
@using Panda.Models.Enums;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>PANDA</title>
    <link rel="stylesheet" type="text/css" href="~/css/reset-css.css">
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
</head>
<body>
    <div class="container-fluid">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-panda">
                <a class="navbar-brand nav-link-white" asp-controller="Home" , asp-action="Index">PANDA</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        @if (this.Context.Session.Get<string>(Constants.Username) != null && this.Context.Session.Get<Role>(Constants.Role) == Role.Admin)
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-white active" asp-controller="Packages" asp-action="Pending">Pending</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-white active" asp-controller="Packages" asp-action="Shipped">Shipped</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-white active" asp-controller="Packages" asp-action="Delivered">Delivered</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-white active" asp-controller="Packages" asp-action="Create">Package</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link nav-link-white active" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (this.Context.Session.Get<string>(Constants.Username) != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-white active" asp-controller="Receipts" asp-action="Index">Receipts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-white active" asp-controller="Users" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-white active" asp-controller="Users" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-white active" asp-controller="Users" asp-action="Register">Register</a>
                            </li>
                        }

                    </ul>
                </div>

            </nav>
        </header>
        <main class="mt-3">
            @RenderBody()
        </main>
        <footer>
            <div class="container-fluid bg-panda">
                <div class="text-white p-2 text-center">
                    &copy; CopyRight Sanity Web Design Studios 2018. All rights reserved.
                </div>
            </div>
        </footer>
    </div>
</body>
</html>


