@model Panda.ViewModels.UserViewModel

<h1 class="text-center text-torshia">Register</h1>
<hr class="bg-panda w-50 hr-2" />
<form class="mx-auto w-50"  asp-action="Register" >
    <div class="form-group">
        <label asp-for="Username" class="text-torshia">Username</label>
        <input asp-for="Username" class="form-control" id="username" placeholder="Username...">
    </div>
    <div class="form-group">
        <label asp-for="Password" class="text-torshia">Password</label>
        <input asp-for="Password" class="form-control" id="password" placeholder="Password...">
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="text-torshia">Confirm Password</label>
        <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword" placeholder="Confirm Password...">
    </div>
    <div class="form-group">
        <label asp-for="Email" class="text-torshia">Email</label>
        <input asp-for="Email" class="form-control" id="email" placeholder="Email..." >
    </div>
    <div class="button-holder mt-4 d-flex justify-content-center">
        <button type="submit" class="btn bg-panda text-white">Register</button>
    </div>
</form>